package com.java.Daimond;

public class DaimontPattern {

	public static void main(String[] args) {
//		System.out.println("*");
		
//		public String createDimond(String star) {
//			return "";
//		}
		String stars = " ";
		for(int i = 1; i <= 5; i++) {
			for(int j = 0; j < i ; j++) {
				System.out.print(stars + "*");
			}
			System.out.println();
		}
		
		
		for(int i = 4; i < 0; i--) {
			for(int j = 0; j > i -1 ; j++) {
				System.out.print( + "*");
			}
			System.out.println();
		}

	}

}
